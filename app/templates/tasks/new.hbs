<form>
  <div class="form-group">
    <label>Title</label>
    {{input type="text" class="form-control inputsm" value=title placeholder="Add a new task.."}}
  </div>
  <div class="form-group">
    <label>Due date</label>
    {{input type="date" class="form-control" value=date}}
  </div>
  <div class="form-group">
    <label>Description</label>
    {{textarea class="form-control" value=description placeholder="Describe the task"}}
  </div>
  <button {{action 'addTasks' task.id}} class="btn btn-primary">Submit</button>
</form>
